extends ../layout

block content
	.container.marginbot(style="margin-bottom:150px")
		if(source)
			.row
				link(rel="stylesheet" type="text/css" href="/css/html5player.css")
				.col-md-8
					div(id="player" width="100%" height="100%")
						div#html5playerbox
							video#html5player(width="100%" poster="#{source.picture}")
								source(src=".#{source.filepath}" type="video/mp4")
							div#html5playercontrolbar
								button#playpausebtn
									svg(height="100%" version="1.1" viewBox="0 0 36 36" width="100%")
										use.ytp-svg-shadow"(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#ytp-svg-67")
										path.ytp-svg-fill#ytp-svg-67(d="M 12,26 18.5,22 18.5,14 12,10 z M 18.5,22 25,18 25,18 18.5,14 z")
								div#progress(max='100' value='20')
									div#progress-left
								span#time
									span#current 0:00
									span /
									span#duration 0:00
								button#mute
									svg(height="100%" version="1.1" viewBox="0 0 36 36" width="100%")
										use.ytp-svg-shadow(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#ytp-svg-13")
										use.ytp-svg-shadow(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#ytp-svg-14")
										path#ytp-svg-13.ytp-svg-fill.ytp-svg-volume-animation-speaker(clip-path="url(#ytp-svg-volume-animation-mask)" d="M8,21 L12,21 L17,26 L17,10 L12,15 L8,15 L8,21 Z M19,14 L19,22 C20.48,21.32 21.5,19.77 21.5,18 C21.5,16.26 20.48,14.74 19,14 ZM19,11.29 C21.89,12.15 24,14.83 24,18 C24,21.17 21.89,23.85 19,24.71 L19,26.77 C23.01,25.86 26,22.28 26,18 C26,13.72 23.01,10.14 19,9.23 L19,11.29 Z" fill="#fff")
										path#ytp-svg-14.ytp-svg-fill.ytp-svg-volume-animation-hider(clip-path="url(#ytp-svg-volume-animation-slash-mask)" d="M 9.25,9 7.98,10 7.98,10 l 0,0 Z" fill="#fff")
								div#volume
									div#volumeleft
								button#fullscreen
									svg(height="100%" version="1.1" viewBox="0 0 36 36" width="100%")
										g
											use.ytp-svg-shadow(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#ytp-svg-90")
											path#ytp-svg-90.ytp-svg-fill(d="m 10,16 2,0 0,-4 4,0 0,-2 L 10,10 l 0,6 0,0 z")
										g
											use.ytp-svg-shadow(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#ytp-svg-91")
											path#ytp-svg-91.ytp-svg-fill(d="m 20,10 0,2 4,0 0,4 2,0 L 26,10 l -6,0 0,0 z")
										g
											use.ytp-svg-shadow(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#ytp-svg-92")
											path#ytp-svg-92.ytp-svg-fill(d="m 24,24 -4,0 0,2 L 26,26 l 0,-6 -2,0 0,4 0,0 z")
										g
											use.ytp-svg-shadow(xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#ytp-svg-93")
											path#ytp-svg-93.ytp-svg-fill(d="M 12,20 10,20 10,26 l 6,0 0,-2 -4,0 0,-4 0,0 z")
				.col-md-4
					dl.dl-horizontal
						dt 课程名称
						dd #{source.title}
						dt 主讲老师
						dd #{source.teacher}
						dt 年级
						dd #{source.grade}
						dt 简介
						dd #{source.summary}
		else
			h 不存在这部视频
			a(href='/') 返回首页
		script(src="/js/html5player.js" type="text/javascript")